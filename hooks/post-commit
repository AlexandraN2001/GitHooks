#!/bin/bash

# Save HTML to project root folder
HTML_FILE="../use_git_hooks.html"

# Contents of HTML file
cat <<EOF > "$HTML_FILE"
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Git Hooks</title>
</head>
<body>
<h1>Using HTML for Git Hooks Implementation</h1>
<p>This file was automatically generated after commit.</p>
</body>
</html>
EOF

echo "HTML file '$HTML_FILE' generated successfully."